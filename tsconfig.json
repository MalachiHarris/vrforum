{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "sourceMap": true,
        "outDir": "./build",
        "esModuleInterop": true,
        "moduleResolution": "Bundler",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowJs": false,
        "incremental": true
    },
    "include": ["./src/**/*"]
}
